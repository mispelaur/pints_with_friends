<div class="two-locations-form">
  <form>
    <input class="location" id="first-location" type="text" placeholder="location 1" data-id="0">
    <select class="transit-type">
      <option value="bike" data-transit="BICYCLING">Bike</option>
      <option value="transit" data-transit="TRANSIT"selected>Transit</option>
      <option value="drive" data-transit="DRIVING">Drive</option>
      <option value="walk" data-transit="WALKING">Walk</option>
    </select>
    <input class="location" id="second-location" type="text" placeholder="location 2" data-id="1">
    <select class="transit-type">
      <option value="bike" data-transit="BICYCLING">Bike</option>
      <option value="transit" data-transit="TRANSIT"selected>Transit</option>
      <option value="drive" data-transit="DRIVING">Drive</option>
      <option value="walk" data-transit="WALKING">Walk</option>
    </select>
    <p><input type="checkbox" checked>Pub</p>
    <p><input type="checkbox">Cafe</p>
    <p><input type="checkbox">Restaurant</p>
    <p><input type="checkbox">Cocktail bar</p>
    <p><input type="checkbox">Movie Theater</p>
    <input id="meetup-date-time" name="meetup-date-time" type="datetime-local">
    <button id="calculate" type="button">Calculate</button>

  </form>
</div>